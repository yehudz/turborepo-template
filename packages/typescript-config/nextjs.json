{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./components/*"],
      "@containers/*": ["./containers/*"],
      "@providers/*": ["./providers/*"],
      "@lib/*": ["./lib/*"],
      "@utils/*": ["./utils/*"]
    }
  }
}
