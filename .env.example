# Copy this file to .env.local and update with your actual values
# .env.local is gitignored and safe for secrets

# Database (REQUIRED)
DATABASE_URL="file:./dev.db"

# Node Environment
NODE_ENV="development"

# Clerk Authentication (REQUIRED - Get from https://dashboard.clerk.com)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_publishable_key_here"
CLERK_SECRET_KEY="sk_test_your_secret_key_here"

# App URLs (REQUIRED for production)
NEXT_PUBLIC_APP_URL="http://localhost:3001"  # Web app URL
NEXT_PUBLIC_API_URL="http://localhost:3001/api"  # Web app API URL

# Security (REQUIRED - Generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long"

# Optional Configuration
# CLERK_WEBHOOK_SECRET="whsec_your_webhook_secret_here"
# PORT="3000"